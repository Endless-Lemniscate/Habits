<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HabitFragment"
    android:transitionName="shared_element_container"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="163dp"
        android:gravity="center_horizontal">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/habit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/habit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выполнять:"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:hint="Раз">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/habit_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В"
                android:padding="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:hint="Период">
                <AutoCompleteTextView
                    android:id="@+id/habit_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип привычки:"
            />
        <RadioGroup
            android:id="@+id/habit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@id/good">
            <RadioButton
                android:id="@+id/good"
                android:transitionName="good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хорошая"/>
            <RadioButton
                android:id="@+id/bad"
                android:transitionName="bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Плохая"/>
        </RadioGroup>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Приоритет"
            android:paddingLeft="130dp"
            android:paddingRight="130dp">
            <AutoCompleteTextView
                android:id="@+id/habit_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>



        <EditText
            android:id="@+id/habit_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="color"
            android:hint="Цвет карточки"
            android:text="5"
            android:inputType="number"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/habit_index"
            android:inputType="number"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="-1"
            android:layout_width="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="СОЗДАТЬ"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>
</FrameLayout>